{
  "name": "static-frames",
  "version": "1.0.0",
  "description": "Cryptographic utilities for Solana and EVM chains",
  "main": "dist/index.js",
  "scripts": {
    "build": "pnpm run build:js",
    "build:js": "esbuild src/js/index.js --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
    "build:dev": "esbuild src/js/index.js --bundle --sourcemap --outfile=dist/bundle.js --format=iife",
    "build:prod": "pnpm run build:dev && pnpm run build:js",
    "pnpm:copy": "mkdir -p static/js/dist && cp dist/bundle.min.js{,.map} static/js/dist/",
    "template": "static/replace-template.sh",
    "template:dev": "pnpm template ENVIRONMENT=development API_URL=http://localhost:3000/api",
    "template:prod": "pnpm template ENVIRONMENT=production API_URL=https://api.example.com",
    "serve": "pnpm build:dev && pnpm template:dev && serve static",
    "serve:prod": "pnpm build:prod && pnpm pnpm:copy && pnpm template:prod && serve static",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "solana",
    "ethereum",
    "crypto",
    "ed25519"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/browser": "^3.1.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.1",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.0",
    "serve": "^14.2.4",
    "vitest": "^3.1.1"
  }
}
