{
  "name": "crossmint-signers",
  "version": "1.0.0",
  "description": "Cryptographic utilities for Solana and EVM chains",
  "scripts": {
    "build": "pnpm run build:js",
    "build:js": "esbuild src/index.js --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
    "build:dev": "esbuild src/index.js --bundle --sourcemap --outfile=dist/bundle.js --format=iife",
    "build:prod": "pnpm run build:dev && pnpm run build:js",
    "prepare:env": "[ ! -f .env.local ] && cp .env.local.example .env.local || echo '.env.local already exists'",
    "dev": "pnpm prepare:env && pnpm build:dev && pnpm serve:static",
    "serve": "pnpm prepare:env && pnpm build:dev && serve -s .",
    "serve:static": "serve -s .",
    "serve:prod": "pnpm build:prod && serve -s .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "solana",
    "ethereum",
    "crypto",
    "ed25519"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/browser": "^3.1.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.1",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.0",
    "serve": "^14.2.4",
    "vitest": "^3.1.1"
  }
}
