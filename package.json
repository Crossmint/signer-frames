{
  "name": "crossmint-signers",
  "version": "1.0.0",
  "description": "Cryptographic utilities for Solana and EVM chains",
  "scripts": {
    "build": "pnpm run build:ts",
    "build:js": "esbuild src/index.js --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
    "build:ts": "tsc && esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
    "build:dev": "tsc && esbuild src/index.ts --bundle --sourcemap --outfile=dist/bundle.js --format=iife",
    "build:prod": "pnpm run build:dev && pnpm run build:ts",
    "dev": "pnpm build:dev && pnpm serve:static",
    "serve": "pnpm build:dev && serve -s .",
    "serve:static": "serve -s .",
    "serve:prod": "pnpm build:prod && serve -s .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "generate-sri": "node scripts/generate-sri.js"
  },
  "keywords": [
    "solana",
    "ethereum",
    "crypto",
    "ed25519"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@solana/web3.js": "^1.98.0",
    "@types/node": "^20.12.4",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "bs58": "^6.0.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.1",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.0",
    "serve": "^14.2.4",
    "tweetnacl": "^1.0.3",
    "typescript": "^5.4.2",
    "vitest": "^3.1.1",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "@crossmint/client-sdk-window": "0.2.3",
    "@crossmint/client-signers": "0.0.1",
    "zod": "3.22.4"
  }
}
