{
	"name": "crossmint-signers",
	"version": "0.0.1",
	"description": "Cryptographic utilities for Solana and EVM chains",
	"scripts": {
		"build": "pnpm run build:ts",
		"build:js": "esbuild src/index.js --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
		"build:ts": "tsc && esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
		"build:dev": "tsc && esbuild src/index.ts --bundle --sourcemap --outfile=dist/bundle.js --format=iife",
		"build:prod": "pnpm run build:dev && pnpm run build:ts",
		"dev": "pnpm build:prod && pnpm serve:static",
		"serve": "pnpm build:prod && serve -s .",
		"serve:static": "serve -s . --listen 54825",
		"serve:prod": "pnpm build:prod && serve -s .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:coverage:json": "vitest run --coverage --reporter=json",
		"type-check": "tsc --noEmit",
		"generate-sri": "node scripts/generate-sri.js",
		"lint": "eslint --ext .js,.ts src",
		"lint:fix": "eslint --ext .js,.ts src --fix",
		"format": "prettier --write \"src/**/*.{js,ts}\"",
		"format:check": "prettier --check \"src/**/*.{js,ts}\""
	},
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@solana/web3.js": "^1.98.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^20.12.4",
		"@types/testing-library__react": "^10.2.0",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"@vitest/browser": "^3.1.1",
		"@vitest/coverage-v8": "^3.1.1",
		"bs58": "^6.0.0",
		"concurrently": "^8.2.2",
		"esbuild": "^0.20.2",
		"eslint": "^9.25.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.2.6",
		"happy-dom": "^17.4.4",
		"jest": "^29.7.0",
		"jsdom": "^26.1.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.5.3",
		"serve": "^14.2.4",
		"ts-jest": "^29.3.2",
		"tweetnacl": "^1.0.3",
		"typescript": "^5.4.2",
		"vitest": "^3.1.1",
		"vitest-mock-extended": "^3.1.0"
	},
	"dependencies": {
		"@crossmint/client-sdk-window": "0.2.3",
		"@crossmint/client-signers": "0.0.3",
		"@noble/ed25519": "^1.7.2",
		"@noble/hashes": "^1.7.2",
		"crossmint-signers": "link:",
		"shamir-secret-sharing": "^0.0.4",
		"zod": "3.22.4"
	}
}
