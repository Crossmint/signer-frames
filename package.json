{
  "name": "static-frames",
  "version": "1.0.0",
  "description": "Cryptographic utilities for Solana and EVM chains",
  "main": "dist/index.js",
  "scripts": {
    "build": "pnpm run build:js",
    "build:js": "esbuild src/js/index.js --bundle --minify --sourcemap --outfile=dist/bundle.min.js --format=iife",
    "build:dev": "esbuild src/js/index.js --bundle --sourcemap --outfile=dist/bundle.js --format=iife",
    "build:prod": "mkdir -p dist static/js/dist && pnpm run build:dev && pnpm run build:js",
    "dev": "mkdir -p dist static/js/dist && esbuild src/js/index.js --bundle --sourcemap --outfile=dist/bundle.js --format=iife --watch",
    "dev:copy": "nodemon --watch dist --exec \"cp dist/bundle.js static/js/dist/bundle.js && cp dist/bundle.js.map static/js/dist/bundle.js.map\"",
    "dev:serve": "serve static",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run dev:copy\" \"pnpm run dev:serve\"",
    "serve": "serve static",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "solana",
    "ethereum",
    "crypto",
    "ed25519"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/browser": "^3.1.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.1",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.0",
    "serve": "^14.2.4",
    "vitest": "^3.1.1"
  }
}
